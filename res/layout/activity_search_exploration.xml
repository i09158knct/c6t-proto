<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ルート名検索" />

    <EditText
        android:id="@+id/search_exploration_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >
    </EditText>

    <Spinner
        android:id="@+id/search_exploration_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/search_exploration_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/search_exploration_order_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="降順" />

        <RadioButton
            android:id="@+id/search_exploration_order_asc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昇順" />
    </RadioGroup>

    <Button
        android:id="@+id/search_exploration_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="検索" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>