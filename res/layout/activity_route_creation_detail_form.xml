<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ルート名" />

        <EditText
            android:id="@+id/route_creation_detail_form_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ルート説明" />

        <EditText
            android:id="@+id/route_creation_detail_form_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="3" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/route_creation_detail_form_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="キャンセル" />

    <Button
        android:id="@+id/route_creation_detail_form_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完了" />

</LinearLayout>