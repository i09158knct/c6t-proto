<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="クエスト作成"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="現在位置" />

        <TextView
            android:id="@+id/route_creation_quest_form_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/route_creation_quest_form_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写真を撮る" />
    </LinearLayout>

    <ImageView
        android:id="@+id/route_creation_quest_form_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ポーズ" />

        <Spinner
            android:id="@+id/route_creation_quest_form_pose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pose_subjects" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ミッション" />

        <Spinner
            android:id="@+id/route_creation_quest_form_mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/mission_subjects" />
    </LinearLayout>

    <Button
        android:id="@+id/route_creation_quest_form_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="キャンセル" />

    <Button
        android:id="@+id/route_creation_quest_form_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK" />

    <Button
        android:id="@+id/route_creation_quest_form_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="削除"
        android:visibility="gone" />

</LinearLayout>